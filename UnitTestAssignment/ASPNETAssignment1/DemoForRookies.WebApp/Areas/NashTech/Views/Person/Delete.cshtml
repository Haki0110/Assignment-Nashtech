@model ASPNETAssignment1.Models.Models.Person
@{
    ViewData["Title"] = "Delete Person";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Person</h1>

<h3>Are you sure you want to delete this person?</h3>
<div>
    <h4>Person Details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Gender:</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Date of Birth:</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Phone Number:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Birthplace:</dt>
        <dd class="col-sm-10">@Model.BirthPlace</dd>

        <dt class="col-sm-2">Age:</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Is Graduated:</dt>
        <dd class="col-sm-10">@Model.IsGraduated</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
